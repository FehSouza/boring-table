{
  "name": "react-boring-table",
  "version": "0.0.8",
  "description": "Next generation of Headless UI Table && DataGrid",
  "author": "raulpesilva",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/raulpesilva/boring-table.git",
    "directory": "packages/react-boring-table"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "unpkg": "dist/iife/index.js",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/esm/index.d.ts"
      },
      "require": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "node": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "start": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf ./dist && rimraf ./coverage && rimraf ./node_modules",
    "lint": "tsc .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "boring-table": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "react": "^18.2.0",
    "tsconfig": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
