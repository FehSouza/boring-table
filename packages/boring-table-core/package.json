{
  "name": "boring-table",
  "version": "0.0.11",
  "description": "Next generation of Headless UI Table && DataGrid",
  "author": "raulpesilva",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/raulpesilva/boring-table.git",
    "directory": "packages/boring-table-core"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "unpkg": "dist/index.global.js",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "start": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf ./dist && rimraf ./coverage",
    "lint": "tsc .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "tsconfig": "workspace:*",
    "type-fest": "^4.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
