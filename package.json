{
  "name": "boring-table",
  "version": "0.0.1",
  "description": "",
  "author": "raulpesilva",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/raulpesilva/boring-table.git"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "unpkg": "dist/index.global.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsup",
    "dev": "tsup --watch",
    "dev:local": "tsx run.ts",
    "dev:local:watch": "tsx watch --ignore ./node_modules run.ts",
    "build": "tsup --minify",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "clean": "rimraf ./dist && rimraf ./coverage",
    "lint": "tsc",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@microsoft/api-extractor": "^7.42.0",
    "@vitest/coverage-v8": "^1.3.1",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "type-fest": "^4.11.1"
  }
}
